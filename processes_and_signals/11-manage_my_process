#!/bin/bash

# Check if the correct number of arguments is provided
if [ "$#" -ne 1 ]; then
    echo "Usage: $0 {start|stop|restart}"
    exit 1
fi

# Function to start manage_my_process
start_manage_my_process() {
    # Check if the process is already running
    if [ -f /var/run/my_process.pid ]; then
        echo "Error: manage_my_process is already running."
        exit 1
    fi
    
    # Start the process
    ./manage_my_process &
    echo $! > /var/run/my_process.pid
    echo "manage_my_process started"
}

# Function to stop manage_my_process
stop_manage_my_process() {
    # Check if the process is running
    if [ ! -f /var/run/my_process.pid ]; then
        echo "Error: manage_my_process is not running."
        exit 1
    fi
    
    # Stop the process
    kill "$(cat /var/run/my_process.pid)"
    rm -f /var/run/my_process.pid
    echo "manage_my_process stopped"
}

# Function to restart manage_my_process
restart_manage_my_process() {
    # Stop the process
    stop_manage_my_process
    
    # Start the process
    start_manage_my_process
    
    echo "manage_my_process restarted"
}

# Main script
case "$1" in
    start)
        start_manage_my_process
        ;;
    stop)
        stop_manage_my_process
        ;;
    restart)
        restart_manage_my_process
        ;;
    *)
        echo "Usage: $0 {start|stop|restart}"
        exit 1
esac

